{
  "presets": ["next/babel"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@store": "./data/store",
          "@redux": "./data/redux",
          "@helpers": "./helpers",
          "@lib": "./lib"
        }
      }
    ],
    [
      "babel-plugin-styled-components", 
      {
        "ssr": true, 
        "displayName": true, 
        "preprocess": false 
      }
    ]
  ]
}